<!-- Product Section -->

<section class="product-section">
  <div class="product-details">
    <div class="product-header">
      <h1 class="product-title">{{ product.title }}</h1>
      <div class="menu-selector">
        <div class="menu-info">
          <p class="menu-description">Уникальное меню на 30 дней:</p>
          <div class="day-navigation">
            <button class="nav-btn prev-btn" id="prev-btn">
              <img src="{{ 'arrow-1.svg' | asset_url }}" alt="Previous" />
            </button>
            <div class="days-container">
                              <span class="day-item current-day">День 1</span>
            </div>
            <button class="nav-btn next-btn" id="next-btn">
              <img src="{{ 'arrow-1-1.svg' | asset_url }}" alt="Next" />
            </button>
          </div>
        </div>
        <div class="nutrition-info">
          <span class="nutrition-item">К 0</span>
          <span class="nutrition-item">Б 0</span>
          <span class="nutrition-item">Ж 0</span>
          <span class="nutrition-item">У 0</span>
        </div>
      </div>
      <div class="dishes-gallery" id="dishes-gallery">
        <!-- Блюда будут загружены динамически из sport-dishes-data.json -->
      </div>
    </div>
    <div class="product-description">
      <h2 class="description-title">{{ product.description }}</h2>
      <div class="description-text">{{ product.short_description }}</div>
    </div>
  </div>

  <!-- Settings Panel -->
  <form action="{{ cart_url }}" method="post" data-product-id="{{ product.id }}" class="settings-panel">

    {% if product.show_variants? %}
        <select name="variant_id" data-product-variants='{"default": "option-radio"}'>
            {% for variant in product.variants %}
              <option value="{{ variant.id }}">{{ variant.title | escape }}</option>
            {% endfor %}
          </select>

        <hr class="separator-line" />
    {% else %}
        <input type="hidden" name="variant_id" value="{{product.variants.first.id}}" >
    {% endif %}

    {% unless product.is_bundle %}
        {% if product.accessories.size > 0 %}
          <div class="">
            <div data-product-accessories></div>
          </div>
    
          <template data-product-accessories-template>
            <div
              class="accessory-item"
              data-product-accessories-item
            >
              <div class="accessory-name" style="display: none;">
                <strong>
                  <span data-product-accessory-name></span>
                </strong>
    
                <span data-product-accessory-minmax-count='{
                  "minCountMessage": "{{ messages.from }}",
                  "maxCountMessage": "{{ messages.to }}"
                }'></span>
              </div>
    
              <div class="accessory-values meal-options" data-product-accessory-values></div>
    
              <div
                data-product-accessory-error='{
                  "lessThenMinCount": "Выбрано меньше минимального количества",
                  "moreThenMaxCount": "Выбрано больше максимального количества",
                  "scrollEnabled": "true"
                }'
                class="accessory-item__error"
              ></div>
            </div>
          </template>
    
          <template data-product-accessory-values-template>
            <label
              class="accessory-values__item meal-option"
              data-product-accessory-values-item
              data-product-accessory-values-item-id
            >
                <div class="toggle-switch">
                    <div class="toggle-circle"></div>
                </div>
              <span data-product-accessory-values-item-name></span><span style="display: none;" data-product-accessory-values-item-price></span>
            </label>
          </template>
        {% endif %}
      {% endunless %}

    <hr class="separator-line" />

    <!-- Allergen Exclusions -->
    <div class="allergen-section">
      <div class="allergen-header">
        <h3 class="allergen-trigger">Исключить аллергены</h3>
        <p class="allergen-info">
          <span class="info-text">Первые 3 ингредиента — бесплатно<br />За каждое дополнительное исключение:</span>
          <span class="price">+300 ₽</span>
        </p>
      </div>
      
      <!-- Allergen Dropdown -->
      <div class="allergen-dropdown">
        <div class="dropdown-header">
          <span>Выберите, что исключить:</span>
        </div>
        <div class="search-container">
          <div class="search-icon">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5 11.5L14 14M13 7.5C13 10.5376 10.5376 13 7.5 13C4.46243 13 2 10.5376 2 7.5C2 4.46243 4.46243 2 7.5 2C10.5376 2 13 4.46243 13 7.5Z" stroke="#D4D4CD" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <input type="text" class="allergen-search" placeholder="Поиск" />
        </div>
        <div class="allergen-list">
        </div>
      </div>
      <div class="allergen-tags">
      </div>
      <div class="allergen-note">
        <div class="info-icon">
          <svg width="2" height="10" viewBox="0 0 2 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.400024 2.975H1.60002V9.18269H0.400024V2.975ZM0.400024 0.817307H1.60002V2.14423H0.400024V0.817307Z" fill="#D4D4CD"/>
          </svg>
        </div>
        <span>Указанные продукты будут исключены из вашего меню</span>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="order-summary">
      <div class="price-info">
        <span class="price-label">Итого:</span>
        <div class="price-display">
          <span class="total-price" data-product-card-price></span>
          <span class="price-period">/ день</span>
        </div>
      </div>
      <div class="order-actions">
        <button class="add-to-cart-btn">Заказать доставку</button>
        <p class="delivery-info">Ближайшая доставка: 19 марта с 6:00 до 10:00</p>
      </div>
    </div>
  </form>
