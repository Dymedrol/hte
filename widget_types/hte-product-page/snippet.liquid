<!-- Product Card Component -->
<div class="product-card">
  <!-- Breadcrumbs -->
  <div class="breadcrumbs">
    <a href="/collection/poleznyy-magazin" class="breadcrumb-item breadcrumb-link">Полезный магазин</a>
    <span class="breadcrumb-separator"> / </span>
    <a href="{{ product.url }}" class="breadcrumb-item breadcrumb-link active">{{ product.title }}</a>
  </div>

  <div class="product-content">
    <!-- Left Column - Product Details -->
    <div class="product-details">
      <div class="product-info">
        <h1 class="product-title">{{ product.title }}</h1>
        
        <div class="product-description">
          {{ product.description }}
        </div>

        {% if product.properties.sostav %}
          <div class="product-composition">
            <span class="composition-label">Состав:</span>
            <div class="ingredients">
              {% for item in product.properties.sostav.characteristics %}
                <span class="ingredient-tag">{{ item.name }}</span>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Product Gallery -->
      <div class="product-gallery">
        <div class="product-main-image">        
          <img src="{{ product.first_image.large_url }}" alt="{{ product.title }}" />
        </div>

        {% if product.images.size > 1 %}
          <div class="product-gallery-navigation">
            <button class="product-nav-arrow product-prev-arrow">
              <img src="{{ 'arrow-1.svg' | asset_url }}" alt="Предыдущее" />
            </button>
            
            <div class="product-thumbnails">
              {% for image in product.images %}
                <div class="product-thumbnail {% if forloop.first %}active{% endif %}" data-image="{{ image.large_url }}">
                  <img src="{{ image.thumb_url }}" alt="{{ image.title }}" />
                </div>
              {% endfor %}
            </div>
            
            <button class="product-nav-arrow product-next-arrow">
              <img src="{{ 'arrow-1-1.svg' | asset_url }}" alt="Следующее" />
            </button>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Right Column - Product Settings -->
    <form action="{{ cart_url }}" method="post" data-product-id="{{ product.id }}" class="product-settings">
      {% if product.show_variants? %}
        <select name="variant_id" data-product-variants='{"default": "option-radio"}'>
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">{{ variant.title | escape }}</option>
          {% endfor %}
        </select>
      {% else %}
        <input type="hidden" name="variant_id" value="{{ product.variants.first.id }}" />
      {% endif %}
      
      <div class="product-quantity-selector" data-quantity data-min="1">
        <input type="text" name="quantity" value="1" style="display: none;"/>
        <div class="product-quantity-controls">
          <span class="product-quantity-btn product-minus-btn" data-quantity-change="-1">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8H13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
          </span>
          <div class="product-quantity-value">
            <span data-quantity-value>1</span>шт.
          </div>
          <span class="product-quantity-btn product-plus-btn" data-quantity-change="1">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 3V13M3 8H13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
          </span>
        </div>
        <span class="product-price-per-unit">{{ product.price | money }}/шт.</span>
      </div>

      <div class="product-specs">
        {%for property in product.properties %}
            {%  unless property.handle == 'sostav' %}  
                <div class="product-spec-item">
                    <span class="product-spec-label">{{property.name}}:</span>
                    {%for item in property.characteristics %}
                        <span class="product-spec-value">{{item.name}}</span>
                    {%endfor%}
                </div>
            {% endunless %}
        {%endfor%}
      </div>

      <div class="product-purchase-section">
        <div class="product-total-price">
          <span class="product-price-label">Цена:</span>
          <span class="product-price-value" data-product-price="{{ product.price }}">{{ product.price | money }}</span>
        </div>
        
        <button class="product-add-to-cart-btn">Добавить в корзину</button>
        
        <p class="product-delivery-info">Ближайшая доставка: 19 марта с 6:00 до 10:00</p>
      </div>
    </form>
  </div>
</div>