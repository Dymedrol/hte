<!-- Pets Quiz Component - Step 1 (объединенный с выбором веса) -->
<div class="pets-quiz-section" id="step-1">
  <div class="pets-quiz-container">
    <!-- Step Progress -->
    <div class="step-progress">
      <div class="step-info">
        <span class="step-number">Шаг 1</span>
        <span class="step-counter">1/3</span>
      </div>
      <div class="progress-bar">
        <div class="progress-segment active"></div>
        <div class="progress-segment"></div>
        <div class="progress-segment"></div>
      </div>
    </div>

    <!-- Quiz Title -->
    <h1 class="quiz-title">Рассчитайте рацион вашего питомца</h1>

    <!-- Pet Options -->
    <div class="pet-options">
      <!-- Option 1: Puppies -->
      <div class="pet-option" data-pet-type="puppy">
        <div class="pet-card">
          <div class="pet-image puppy-image" style="background-image: url('{{ 'puppy-icon.png' | asset_url }}');"></div>
          <div class="selected-badge" style="display: none;">Выбрано</div>
        </div>
        <p class="pet-label">Для щенков</p>
        
        <!-- Weight Selector (скрыт по умолчанию) -->
        <div class="weight-selector" style="display: none;">
          <div class="weight-counter">
            <button class="weight-btn minus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
            <div class="weight-input-container">
              <input type="number" class="weight-input" value="5" min="0.1" step="0.5" pattern="[0-9]*\.?[0-9]*" inputmode="decimal">
              <span class="weight-placeholder">кг</span>
            </div>
            <button class="weight-btn plus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          </div>
          <button class="btn btn-primary" id="btn-next-step1-puppy">Далее</button>
        </div>
      </div>

      <!-- Option 2: Adult Dogs -->
      <div class="pet-option" data-pet-type="adult-dog">
        <div class="pet-card">
          <div class="pet-image adult-dog-image" style="background-image: url('{{ 'dog-icon.png' | asset_url }}');"></div>
          <div class="selected-badge" style="display: none;">Выбрано</div>
        </div>
        <p class="pet-label">Для взрослой собаки</p>
        
        <!-- Weight Selector (скрыт по умолчанию) -->
        <div class="weight-selector" style="display: none;">
          <div class="weight-counter">
            <button class="weight-btn minus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
            <div class="weight-input-container">
              <input type="number" class="weight-input" value="25" min="0.1" step="0.5" pattern="[0-9]*\.?[0-9]*" inputmode="decimal">
              <span class="weight-placeholder">кг</span>
            </div>
            <button class="weight-btn plus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          </div>
          <button class="btn btn-primary" id="btn-next-step1-adult-dog">Далее</button>
        </div>
      </div>

      <!-- Option 3: Kittens and Cats -->
      <div class="pet-option" data-pet-type="cat">
        <div class="pet-card">
          <div class="pet-image cat-image" style="background-image: url('{{ 'cat-icon.png' | asset_url }}');"></div>
          <div class="selected-badge" style="display: none;">Выбрано</div>
        </div>
        <p class="pet-label">Для котят и кошек</p>
        
        <!-- Weight Selector (скрыт по умолчанию) -->
        <div class="weight-selector" style="display: none;">
          <div class="weight-counter">
            <button class="weight-btn minus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
            <div class="weight-input-container">
              <input type="number" class="weight-input" value="4" min="0.1" max="100" step="0.1" pattern="[0-9]*\.?[0-9]*" inputmode="decimal">
              <span class="weight-placeholder">кг</span>
            </div>
            <button class="weight-btn plus-btn" type="button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          </div>
          <button class="btn btn-primary" id="btn-next-step1-cat">Далее</button>
        </div>
      </div>
    </div>
  </div>
</div>

