{
  "design": [
    {
      "type": "group",
      "name": "{{ messages.widget }}",
      "items": [
        {
          "name": "bg",
          "label": "{{ messages.widget_background_color }}",
          "value": "",
          "type": "color",
          "clearable": true
        },
        {
          "class": "checkbox",
          "name": "layout-wide-bg",
          "label": "{{ messages.wide_background }}",
          "value": null,
          "type": "checkbox"
        },
        {
          "class": "range",
          "name": "layout-pt",
          "min": 0,
          "max": 10,
          "step": 0.5,
          "label": "{{ messages.padding_top }}",
          "type": "number",
          "with_btns": true,
          "unit": "vw",
          "general": true,
          "general_position": 1
        },
        {
          "class": "range",
          "name": "layout-pb",
          "min": 0,
          "max": 10,
          "step": 0.5,
          "label": "{{ messages.padding_bottom }}",
          "type": "number",
          "with_btns": true,
          "unit": "vw",
          "general": true,
          "general_position": 1
        },
        {
          "class": "number",
          "name": "layout-content-max-width",
          "min": 600,
          "max": 2000,
          "label": "{{ messages.content_max_width }}",
          "type": "number",
          "unit": "px",
          "hide_mobile": true
        },
        {
          "class": "checkbox",
          "name": "layout-wide-content",
          "label": "{{ messages.wide_content }}",
          "value": null,
          "type": "checkbox",
          "hide_mobile": true
        },
        {
          "class": "checkbox",
          "name": "layout-edge",
          "label": "{{ messages.remove_padding_at_edges }}",
          "value": null,
          "type": "checkbox"
        }

      ]
    },
    {
      "type": "group",
      "name": "{{ messages.adaptive }}",
      "items": [
        {
          "class": "checkbox",
          "name": "hide-desktop",
          "label": "{{ messages.hide_desktop }}",
          "value": null,
          "type": "checkbox"
        },
        {
          "class": "checkbox",
          "name": "hide-mobile",
          "label": "{{ messages.hide_mobile }}",
          "value": null,
          "type": "checkbox"
        }
      ]
    }
  ]
}
